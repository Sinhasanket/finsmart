<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= money.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/mainpage/<%= money._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="money[name]" value="<%= money.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="money[image]" value="<%= money.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="money[description]" value="<%= money.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/mainpage">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

